<Page xmlns="http://schemas.nativescript.org/tns.xsd" class="page">
	<Page.actionBar>
		<ActionBar title="Location App" icon="" class="action-bar">
		</ActionBar>
	</Page.actionBar>

	<FlexboxLayout flexDirection="column">
		<ListView items="{{ entries }}" id="log" flexGrow="1" class="list-group">
		</ListView>
		<FlexboxLayout height="100">
			<Button class="btn btn-primary" text="Start" tap="start" flexGrow="1"/>
			<Button class="btn btn-primary" text="Stop" tap="stop" flexGrow="1"/>
		</FlexboxLayout>
	</FlexboxLayout>
</Page>
